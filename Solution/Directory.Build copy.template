<?xml version="1.0" encoding="utf-8"?>
<Project>
  <PropertyGroup>
    <LangVersion>9.0</LangVersion>
    <GamePath>I:\SteamLibrary\steamapps\common\Elin</GamePath>
  </PropertyGroup>
  <Target Name="GlobalPostBuildEvent" AfterTargets="PostBuildEvent">
    <PropertyGroup>
      <DLL_PATH>$(TargetDir)$(TargetName).dll</DLL_PATH>
      <DEST_DIR>$(GamePath)\Package\Mod_$(ProjectName)\</DEST_DIR>
      <DATA_DIR>$(ProjectDir)data\*</DATA_DIR>
      <CS_FILES>$(ProjectDir)*.cs</CS_FILES>
    </PropertyGroup>

    <Exec Command="xcopy &quot;$(DLL_PATH)&quot; &quot;$(DEST_DIR)&quot; /Y" />
    <Exec Command="xcopy &quot;$(CS_FILES)&quot; &quot;$(DEST_DIR)&quot; /Y" />
    <Exec Command="xcopy &quot;$(DATA_DIR)&quot; &quot;$(DEST_DIR)&quot; /Y /E /I" />
  </Target>
</Project>
